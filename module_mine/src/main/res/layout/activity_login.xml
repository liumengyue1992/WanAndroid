<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.lmy.module_common.view.TitleBar
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            app:bar_title="@string/login" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/dp_24"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_46">

            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_head_default" />


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:drawableStart="@drawable/ic_account"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_30"
                android:hint="@string/username"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/Grey700"
                android:textSize="@dimen/item_tv_content" />


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="@dimen/dp_16"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textColorHint="@color/Grey700"
                android:textSize="@dimen/item_tv_content" />

            <TextView
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_24"
                android:background="@drawable/btn_login_bg"
                android:gravity="center"
                android:padding="@dimen/dp_12"
                android:text="@string/login"
                android:textColor="@color/White"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_24"
                android:gravity="end"
                android:text="@string/go_register"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

    </LinearLayout>

</layout>